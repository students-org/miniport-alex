.container-fluid.contact(id="contact")
  h2.caption.contact__caption Have me make stuff for you.
  p.contact__info Ornare nulla proin odio consequat sapien vestibulum ipsum sed lorem.

  form.contactForm(method="post" name="dataContact" )
  .row
    .col-md-6
      input.contactForm__name.form-style(type="text" name="name" placeholder="Name")
    .col-md-6
      input.contactForm__email.form-style(type="email" name="email" placeholder="Email")
  input.contactForm__subject.form-style(type="text" name="subject" placeholder="Subject")
  textarea.contactForm__message.form-style(name="message" placeholder="Message")
  input.button.contactForm__btn(type="submit" name="submit" value="Send Message")
  input.button.contactForm__btn.contactForm__btn_grey_clear(type="reset" name="clear" value="Clear Form")

