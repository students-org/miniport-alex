.navbar
  height 3rem
  background #282828
  position fixed
  display block
  left 0
  right 0
  top -@height
  transition .5s ease-in-out
  z-index 1000
  &List
    text-align center
    &__item
      display inline-block
      padding 0 1.5rem
      & a
        text-decoration none
        color #fff
  &__switcher
    display inline-block
    position fixed
    right 2rem
    top .5rem
    & i
      padding-left 1rem
  & .navbar__switcher
    opacity 0

input.navbar__switcher
  display none
  &:checked
    ~ .navbar
      top 0
      & .navbar__switcher
        opacity 1
        transition 1.5s ease-in-out