.grayWraper
  background #303030
.contact
  @extend $indents
  margin 0 auto
  text-align center
  max-width 50%
  text-align: center
  &__caption
    color #fff
    font-size 2.5rem
  &__info
    font-size 1.6rem
    font-weight 200
  &Form
    &__message     
      margin-bottom 5rem
      padding-bottom 12rem
    &__btn
      font-size 1.2rem
      padding 1.25rem 2.5rem
      border none
      &_grey_clear
        background #404040
        border 1px solid transparent
        margin-left 2.5rem        
        &:hover
          background lighten(@background, 10%)
          transition .5s ease-in-out


@media screen and (max-width 768px)
  .contact
    // max-width 100%
    &Form__email
      margin-top 2rem
    .contactForm__btn
      width 100%
      margin 0
      &_grey_clear
        margin 2rem 0

@media screen and (max-width 992px)
  .contact
    max-width 100%
