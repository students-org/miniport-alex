footer
  background #303030
.contact
  @extend $indents
  text-align center
  max-width 50%
  text-align: center
  &__caption
    color #fff
    font-size 2.5rem
  &__info
    font-size 1.6rem
    font-weight 200
  &Data
    line-height 2rem
    &__name
      width 100%
    &__email
      width 100%
    &__subject
      width 100%
      margin 2rem 0
    &__message
      width 100%
      height 14rem
      resize none
      margin-bottom 5rem
    &__btn
      font-size 1.2rem
      padding 1.25rem 2.5rem
      border none
      &_clear
        background #404040
        border 1px solid transparent
        margin-left 2.5rem        
        &:hover
          background lighten(@background, 10%)
          transition .5s ease-in-out


@media screen and (max-width 1000px)
  .contact
    max-width 100%
    &Data__email
      margin-top 2rem
    .contactData__btn
      width 100%
      margin 0
      &_clear
        margin 2rem 0
